<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:background="@drawable/background_layout_oval"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_weight="1">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileView"
            android:src="@drawable/ic_profile_big" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp"
        android:layout_weight="1">

        <com.andreabaccega.widget.FormEditText
            whatever:testType="email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/nameBox"
            android:background="@drawable/background_edit_text_top"
            android:drawableStart="@drawable/ic_profile_small"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8sp"
            android:padding="10sp"
            android:typeface="monospace"
            android:textAlignment="center"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/emailBox"
            android:background="@drawable/background_edit_text_middle"
            android:drawableStart="@drawable/ic_email"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8sp"
            android:padding="10sp"
            android:typeface="monospace"
            android:textAlignment="center"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:ems="10"
            android:id="@+id/phoneBox"
            android:background="@drawable/background_edit_text_bottom"
            android:drawableStart="@drawable/ic_phone"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8sp"
            android:typeface="monospace"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:clickable="false"
            android:padding="8sp" />

        </LinearLayout>

</LinearLayout>